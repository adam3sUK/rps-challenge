<section>
  <h1><%= @game.player_1.name %> picks: <%= @game.player_1.choice %></h1>
</section>

<section>
  <h1><%= @game.player_2.name %> picks: <%= @game.player_2.choice %></h1>
</section>

<% if @game.game_result == "Win" %>
<p><%= @game.player_1.name %> wins!<p>
<% elsif @game.game_result == "Lose" %>
<p><%= @game.player_1.name %> loses!<p>
<% else %>
<p>Draw!</p>
<% end %>